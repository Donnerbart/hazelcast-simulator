#!/bin/bash

P12_FILE=$1
CURRENT_PATH=$(pwd)

echo "Converting your P12 file to ~/google.pem..."
echo "Usually the password is: \"notasecret\""

openssl pkcs12 -in ${CURRENT_PATH}/${P12_FILE} -out ${CURRENT_PATH}/temp1.pem -nodes
openssl rsa -in ${CURRENT_PATH}/gce-temp.pem -out ~/gce.pem
rm ${CURRENT_PATH}/gce-temp.pem
